<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat e-mail :" />

    <EditText
        android:id="@+id/et_kirim_email_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subjek :" />

    <EditText
        android:id="@+id/et_kirim_email_subjek"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Subjek"
        android:inputType="textMultiLine"
        android:maxLines="2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Isi Pesan :" />

    <EditText
        android:id="@+id/et_kirim_email_body"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Isi pesan"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:text="vbnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnvccccccccccccccccccccccccccccccvvvvvvvvvvvvvvvvvfhhhhhhhhhhhhhdffffffffffffffgfgdfgdfgdfgdfgfgdfgdfgdfgdfgdfgfdgfdgdfgcvbxzbbbbbbb" />

    <Button
        android:id="@+id/btn_kirim_email_kirim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pilih email " />
</LinearLayout>