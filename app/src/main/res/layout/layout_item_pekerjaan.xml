<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_batas_pengiriman"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="10dp"
            android:text="Diposting 30 hari yang lalu"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintLeft_toRightOf="@+id/iv_gambar_perusahaan"
            app:layout_constraintTop_toBottomOf="@+id/tv_nama_perusahaan" />

        <TextView
            android:id="@+id/tv_deskripsi_perusahaan"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="coba ini adalah sebuah kata teks yang tidak jelas bukan untuk ditampilkan pada program sebenarnya namun hanya untuk percobaan belaka hahaha, maaf ya"
            android:typeface="sans"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_batas_pengiriman" />

        <TextView
            android:id="@+id/tv_lowongan"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Developer Android"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/iv_gambar_perusahaan"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_nama_perusahaan"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:text="Pt. Indomaret Grup"
            android:textSize="15sp"
            android:typeface="sans"
            app:layout_constraintLeft_toRightOf="@+id/iv_gambar_perusahaan"
            app:layout_constraintTop_toBottomOf="@+id/tv_lowongan" />

        <ImageView
            android:id="@+id/iv_gambar_perusahaan"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:maxHeight="60dp"
            android:maxWidth="60dp"
            android:minHeight="60dp"
            android:minWidth="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_menu_gallery" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

